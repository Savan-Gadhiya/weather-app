<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLink}}
</head>

<body>

    <!-- Nav Bar -->
    {{>navbar}}


    <!-- Main Header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_container">
                    <form action="" class="searchform">
                        <input type="text" name="" id="cityName" placeholder="Enter Your city name" autocomplete="off" class="Searchinput">
                        <button type="submit" class="submitBtn" id="submit">Submit</button>
                    </form>
                </div>

                <div class="tempInformation">
                    {{!-- <div class="top_layer">
                        <p class="day" id="day">Thusday</p>
                        <p class="today_data" id="date">13 OCT</p>
                    </div> --}}
                    <div class="main_layer">
                        <p class="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide" id="outputDiv">
                            <p class="temp"><span id="tempreture">0</span> <sup>o</sup> C </p>
                            <p class="temp_status" id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
                    
            </div>
        </div>
    </div>

    <script src="./js/main.js"></script>
    <!-- footer  -->
